#include<stdio.h>

void main (void)
{
	int n ,result = 1 ;
	printf("Please enter the number  :\n");
	fflush(stdin); fflush(stdout);
	scanf("%d", &n );

	if (n>0)
	{
		for (int i = 1 ; i <= n ; i++)
		{
			result = result * i ;
		}

	printf("The Factorial of the number %d is %d ",n , result);
	}
	else if (n<0)
	{
		printf("No factorial foe negative number");
	}
	else if (n==0)
		printf("The factorial of zero equals one ");

}


#include<stdio.h>

void main (void)
{
	int  a , b , result = 0 ;
	char x ;
	printf("Please enter the operator either + or - or * or /  :");
	fflush(stdin); fflush(stdout);
	scanf("%c", &x );

	printf("Please enter the two operands  : ");
	fflush(stdin); fflush(stdout);
	scanf("%d%d", &a,&b );

	switch(x)
	{
	case(43):
		{
			result = a+b ;
			break ;
		}
	case(45):
		{
			result = a-b ;
			break ;
		}
	case(42):
		{
			result = a*b ;
			break ;
		}
	case(47):
		{
			result = a/b ;
			break ;
		}

	}

	printf("%d%d%d",  a,x,b);
}
